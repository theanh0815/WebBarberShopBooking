@* Views/Account/Login.cshtml *@
@model WebBarberShopBooking.Controllers.LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <partial name="_AccountForm" model="Model" />
            <div class="form-group form-check">
                <label asp-for="RememberMe" class="form-check-label"></label>
                <input asp-for="RememberMe" class="form-check-input" />
            </div>
            <div class="form-group">
                <input type="submit" value="Đăng nhập" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Register">Bạn chưa có tài khoản? Đăng ký</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}