@model WebBarberShopBooking.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<style>
    .login-container {
        max-width: 500px;
        margin: 2rem auto;
    }

    .login-card {
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        border: none;
    }

    .login-header {
        background: linear-gradient(135deg, #0d6efd 0%, #0b5ed7 100%);
        padding: 1.5rem;
        text-align: center;
        color: white;
    }

    .login-title {
        font-weight: 700;
        margin-bottom: 0;
        font-size: 1.6rem;
    }

    .login-body {
        padding: 2rem;
    }

    .form-floating {
        margin-bottom: 1.5rem;
    }

        .form-floating > .form-control {
            padding: 1rem 0.75rem;
        }

        .form-floating > label {
            padding: 1rem 0.75rem;
        }

    .form-control:focus {
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
        border-color: #86b7fe;
    }

    .login-btn {
        width: 100%;
        padding: 0.75rem;
        font-weight: 600;
        font-size: 1rem;
        border-radius: 5px;
        margin-top: 1rem;
        transition: all 0.2s;
    }

        .login-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    .remember-me {
        display: flex;
        align-items: center;
        margin-bottom: 1rem;
    }

        .remember-me input {
            margin-right: 0.5rem;
        }

    .validation-summary {
        border-radius: 5px;
        margin-bottom: 1.5rem;
        padding: 0.75rem;
    }

        .validation-summary ul {
            padding-left: 1.25rem;
            margin-bottom: 0;
        }
</style>

<div class="container login-container">
    <div class="card login-card">
        <div class="login-header">
            <h2 class="login-title">Đăng nhập</h2>
            <p class="mb-0">Vui lòng đăng nhập để tiếp tục</p>
        </div>
        <div class="login-body">
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger validation-summary"></div>

                <div class="form-floating">
                    <input asp-for="Email" class="form-control" placeholder="name@example.com" autocomplete="username" />
                    <label asp-for="Email">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="Password" class="form-control" placeholder="Mật khẩu" autocomplete="current-password" />
                    <label asp-for="Password">Mật khẩu</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="remember-me">
                    <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Ghi nhớ đăng nhập</label>
                </div>

                <button type="submit" class="btn btn-primary login-btn">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Đăng nhập
                </button>

                <div class="mt-3 text-center">
                    <a href="#" class="text-decoration-none">Quên mật khẩu?</a>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4 text-center">
        <p>Chưa có tài khoản? <a href="#" class="text-decoration-none fw-bold">Đăng ký ngay</a></p>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}