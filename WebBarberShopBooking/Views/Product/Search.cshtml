@model IEnumerable<WebBarberShopBooking.Models.Product>

@{
    ViewData["Title"] = "Tìm kiếm sản phẩm";
}

<h1>@ViewData["Title"]</h1>

<p>Kết quả tìm kiếm cho: "@ViewData["SearchTerm"]"</p>

@if (Model.Any())
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description.Substring(0, Math.Min(100, item.Description.Length))...</p>
                        <p class="card-text">Giá: @item.Price.ToString("C")</p>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Không tìm thấy sản phẩm nào.</p>
}

<div>
    <a asp-action="Index">Quay lại danh sách</a>
</div>