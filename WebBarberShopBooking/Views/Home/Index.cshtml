@* Views/Home/Index.cshtml *@
@{
    ViewData["Title"] = "Trang chủ";
}

@* Carousel Section *@
<div id="mainCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://static.vecteezy.com/system/resources/previews/000/081/714/original/retro-barber-shop-vector-background.jpg" class="d-block w-100" alt="Salon Banner 1" style="height: 500px; object-fit: cover;">
            <div class="carousel-caption d-none d-md-block">
                <h2 class="display-4 fw-bold">Nâng tầm cuộc chơi cùng TLAP</h2>
                <p class="lead">Nơi làm đẹp và tạo phong cách cho bạn</p>
                <a href="/Order/Cart" class="btn btn-primary btn-lg">Đặt lịch ngay</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://th.bing.com/th/id/OIP.Y1C2iPj6mDR_tRwtSSSgBQHaE8?w=1920&h=1280&rs=1&pid=ImgDetMain" class="d-block w-100" alt="Salon Banner 2" style="height: 500px; object-fit: cover;">
            <div class="carousel-caption d-none d-md-block">
                <h2 class="display-4 fw-bold">Dịch vụ chuyên nghiệp</h2>
                <p class="lead">Đội ngũ stylist giàu kinh nghiệm</p>
                <a href="/Services" class="btn btn-primary btn-lg">Xem dịch vụ</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://th.bing.com/th/id/OIP.jmCtdS97omNkI_4xE3CElQHaFj?rs=1&pid=ImgDetMain" class="d-block w-100" alt="Salon Banner 3" style="height: 500px; object-fit: cover;">
            <div class="carousel-caption d-none d-md-block">
                <h2 class="display-4 fw-bold">Tin tức mới nhất từ chúng tôi</h2>
                <p class="lead">HOT NEWS!</p>
                <a href="/News" class="btn btn-primary btn-lg">Tin tức</a>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<div class="container">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Chào mừng đến với Salon Tóc của chúng tôi</h1>
        <p class="lead text-muted">Đây là trang web đặt lịch cắt tóc trực tuyến.</p>
    </div>

    <hr class="my-4">
    @* Dịch vụ nổi bật *@
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0 fw-semibold">
            <a href="/Services" class="text-decoration-none text-dark">Dịch vụ nổi bật</a>
        </h2>
        <a href="/Services" class="btn btn-outline-primary btn-sm">Xem tất cả dịch vụ</a>
    </div>
    <div class="row">
        @if (ViewBag.FeaturedServices != null)
        {
            @foreach (var service in ViewBag.FeaturedServices)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm border-0 hover-shadow transition">
                        <img src="@service.ImageUrl" class="card-img-top" alt="@service.Name" style="object-fit: cover; height: 200px;">
                        <div class="card-body">
                            <h5 class="card-title fw-semibold mb-2">@service.Name</h5>
                            <p class="card-text text-muted">@service.Description</p>
                            <p class="card-text small"><strong>Giá:</strong> @service.Price.ToString("N0") VNĐ</p>
                        </div>
                        <div class="card-footer bg-white border-0 d-flex justify-content-between align-items-center">
                            <a href="/Service/Details/@service.Id" class="btn btn-sm btn-primary">Chi tiết</a>
                            <a href="/Order/Cart" class="btn btn-sm btn-success">Đặt lịch</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col">
                <p class="text-muted">Hiện chưa có dịch vụ nổi bật nào.</p>
            </div>
        }
    </div>
    <hr class="my-4">
    @* Tin tức mới nhất *@
    <h2 class="mt-5 mb-4 fw-semibold">Tin tức mới nhất</h2>
    @if (ViewBag.LatestNews != null)
    {
        <partial name="_LatestNews" model="ViewBag.LatestNews" />
    }
    else
    {
        <p class="text-muted">Hiện chưa có tin tức mới nào.</p>
    }
</div>