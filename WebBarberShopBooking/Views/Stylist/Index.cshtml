@model IEnumerable<WebBarberShopBooking.Models.Stylist>

@{
    ViewData["Title"] = "Danh sách thợ cắt tóc";
}

<h1>@ViewData["Title"]</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-success">Thêm thợ</a>
    </p>
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Bio</p>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Xem chi tiết</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Xóa</a>
                    }
                </div>
            </div>
        </div>
    }
</div>