@model WebBarberShopBooking.Models.Stylist

@{
    ViewData["Title"] = "Chi tiết thợ cắt tóc";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Stylist</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name">
        </div>
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Bio)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Bio)
                </dd>
            </dl>
        </div>
    </div>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning">Sửa</a> 
        <a asp-action = "Delete" asp - route - id = "@Model.Id" class="btn btn-sm btn-danger">Xóa</a> 
    }
    <a asp-action="Index">Quay lại danh sách</a>
</div>