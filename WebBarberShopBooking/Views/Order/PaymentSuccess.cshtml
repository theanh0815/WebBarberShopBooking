@model WebBarberShopBooking.Models.Order

@{
    ViewData["Title"] = "Thanh toán thành công";
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-success">
    <p>
        Cảm ơn bạn đã đặt hàng! Đơn hàng của bạn đã được ghi nhận.
    </p>
</div>

<h4>Chi tiết đơn hàng:</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">Mã đơn hàng:</dt>
    <dd class="col-sm-10">@Model.Id</dd>

    <dt class="col-sm-2">Ngày đặt hàng:</dt>
    <dd class="col-sm-10">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</dd>

    <dt class="col-sm-2">Phương thức thanh toán:</dt>
    <dd class="col-sm-10">@Model.PaymentMethod</dd>
</dl>

<h5>Các dịch vụ đã đặt:</h5>
<table class="table">
    <thead>
        <tr>
            <th>Tên dịch vụ</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.Service.Name</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice.ToString("C")</td>
                <td>@(item.Quantity * item.UnitPrice).ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-controller="Order" asp-action="History">Xem lịch sử đơn hàng</a>
</p>